Set(VarLoading,true);
Patch(Requests,LookUp(Requests,ID=varSelectedItemID),{RequestStatus:{Value:If(varConfirmation="Approve","Approved","Rejected")},
            LineName:txtLineName.Text,LineNode:txtLineNode.Text,LineAlias:txtLineAlias.Text,LineHierarchy:txtLineHierarchy.Text,Level:txtLevel.Text,OrgNode:txtLineNode.Text,OrgHierarchey_Level1:txtOrgHierarchy_Level1.Text,PartnerNode:txtPartnerNode.Text,PartnerHierarchey_Level1:txtPartnerHierarchy_Level1
.Text,Item:txtItem.Text,Sort:txtSort.Text,Indent:txtIndent.Text,Format:txtFormat.Text,DecimalPrecision:txtDecimalPrecision.Text,NegativeLine:false,SortCheck:txtSortCheck.Text

});
Patch(RequestLogs,Defaults(RequestLogs),{Title:varSelectedItemID,UserDetails:{
                        '@odata.type': "#Microsoft.Azure.Connectors.SharePoint.SPListExpandedUser",
                        Claims: "i:0#.f|membership|" &User().Email,
                        Department: "",
                        DisplayName: User().FullName,
                        Email: User().Email,
                        JobTitle: "",
                        Picture: ""
                    },Comments:Self.Comments,LogDate:Now(),RequestID:VarSelectedItem.Title,Status:If(varConfirmation="Approve","Approved","Rejected")});
Set(varShowApprovalPopup,false);
Set(VarLoading,false);
Set(VarPopUp,true);
Set(VarSuccessPopupMessage,"Your request has been updated successuflly");
